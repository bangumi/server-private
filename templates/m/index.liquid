{% layout 'm/layout' %}

{% block content %}
<ul class='subNav clearit'>
  {% comment %}<li>{% endcomment %}
  {% comment %}<a{% endcomment %}
  {% comment %}href='/demo/m2'{% endcomment %}
  {% comment %}{% if type == '' %}{% endcomment %}
  {% comment %}class='focus'{% endcomment %}
  {% comment %}{% endif %}{% endcomment %}
  {% comment %}>全部</a{% endcomment %}
  {% comment %}>{% endcomment %}
  {% comment %}</li>{% endcomment %}
  <li>
    <a
      href='/demo/m2'
      {% comment %}{% if type == 'group' %}{% endcomment %}
      class='focus'
      {% comment %}{% endif %}{% endcomment %}
      >小组</a
    >
  </li>
  {% comment %}<li>{% endcomment %}
  {% comment %}<a{% endcomment %}
  {% comment %}href='/demo/m2?type=subject'{% endcomment %}
  {% comment %}{% if type == 'subject' %}{% endcomment %}
  {% comment %}class='focus'{% endcomment %}
  {% comment %}{% endif %}{% endcomment %}
  {% comment %}>条目</a{% endcomment %}
  {% comment %}>{% endcomment %}
  {% comment %}</li>{% endcomment %}
  {% comment %}<li>{% endcomment %}
  {% comment %}<a{% endcomment %}
  {% comment %}href='/demo/m2?type=ep'{% endcomment %}
  {% comment %}{% if type == 'ep' %}{% endcomment %}
  {% comment %}class='focus'{% endcomment %}
  {% comment %}{% endif %}{% endcomment %}
  {% comment %}>章节</a{% endcomment %}
  {% comment %}>{% endcomment %}
  {% comment %}</li>{% endcomment %}
  {% comment %}<li>{% endcomment %}
  {% comment %}<a{% endcomment %}
  {% comment %}href='/demo/m2?type=mono'{% endcomment %}
  {% comment %}{% if type == 'mobile' %}{% endcomment %}
  {% comment %}class='focus'{% endcomment %}
  {% comment %}{% endif %}{% endcomment %}
  {% comment %}>人物</a{% endcomment %}
  {% comment %}>{% endcomment %}
  {% comment %}</li>{% endcomment %}
</ul>

<ul class='mobileTpcList'>
  {% for item in items %}
    <li
      id='item_{{ item.type }}_{{ item.id }}'
      class='line_{% cycle 'odd', 'even' %} item_list'
    >
      <a
        href='/demo/m2/topic/{{ item.type }}/{{ item.id }}'
        title='{{ item.author.nickname }}'
        class='avatar l'
        ><span
          class='avatarNeue avatarSize32 ll'
          data-user='{{ item.author.username }}'
          style="background-image:url('{{ item.author.avatar }}')"
        ></span
      ></a>
      <div class='inner'>
        <a
          href='/demo/m2/topic/{{ item.type }}/{{ item.id }}'
          class='title avatar l'
        >
          {{- item.title -}}
        </a>
        <small class='grey'>({{ item.count }})</small
        ><span class='row'
          ><a
            href='/demo/m2/{{ item.type }}/{{ item.name }}'
            class=''
          >
            {{- item.name -}}</a
          ><small
            class='time'
            >...{{ item.time -}}
          </small></span
        >
      </div>
    </li>
  {% endfor %}
</ul>
{% endblock %}
