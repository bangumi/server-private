{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "sourceMap": true,
    "declaration": false,
    "noEmit": true,
    "rootDir": ".",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      // 需要搭配 package.json 的 exports 来保证正常加载
      // 需要设置 vitest.config.ts 的 resolve.alias 来保证在测试环境中正常加载
      "@app/*": ["./*"]
    }
  }
}
